<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.currency-tracker" path="/org/gnome/shell/extensions/currency-tracker/">
    
    <key name="currency-pair" type="s">
      <default>'USD-EUR'</default>
      <summary>Currency pair to track</summary>
      <description>The currency pair that will be displayed in the panel</description>
    </key>
    
    <key name="refresh-interval" type="i">
      <default>60</default>
      <summary>Refresh interval</summary>
      <description>Time in seconds between updates (30-3600)</description>
    </key>
    
    <key name="show-percentage-change" type="b">
      <default>true</default>
      <summary>Show percentage change</summary>
      <description>Whether to show the percentage change in the panel</description>
    </key>
    
    <key name="show-icon" type="b">
      <default>true</default>
      <summary>Show icon</summary>
      <description>Whether to show the currency icon in the panel</description>
    </key>

    <key name="enable-debug-log" type="b">
      <default>false</default>
      <summary>Enable debug logging</summary>
      <description>Enable debug logging for troubleshooting</description>
    </key>

    <key name="enable-notifications" type="b">
      <default>false</default>
      <summary>Enable notifications</summary>
      <description>Show notifications when currency reaches threshold</description>
    </key>

    <key name="notification-threshold" type="d">
      <default>0.0</default>
      <summary>Notification threshold</summary>
      <description>Rate threshold for notifications (0 = disabled)</description>
    </key>

    <key name="notification-type" type="s">
      <default>'above'</default>
      <summary>Notification type</summary>
      <description>Trigger when rate goes above or below threshold</description>
    </key>

    <key name="decimal-places" type="i">
      <default>2</default>
      <summary>Decimal places</summary>
      <description>Number of decimal places to display (2-4)</description>
    </key>

  </schema>
</schemalist>